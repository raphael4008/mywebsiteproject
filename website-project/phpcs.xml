<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PHP Code Sniffer configuration for this project.</description>

    <!-- Check for PSR-12 compatibility -->
    <rule ref="PSR12"/>

    <!-- Specify the paths to check -->
    <file>src</file>
    <file>public</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

</ruleset>
