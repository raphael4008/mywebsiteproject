RewriteEngine On
RewriteBase /househunting/website-project/public/api/

# Allow direct access to existing files like charge.php, mpesa.php, etc.
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Route specific endpoints to their handlers
RewriteRule ^charge$ charge.php [L]
RewriteRule ^mpesa$ mpesa.php [L]

# Route all /listings/... requests to listings.php
RewriteRule ^listings/(.*)$ listings.php [QSA,L]
