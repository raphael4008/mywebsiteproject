# This file contains the environment variables for the application.
# Copy this file to .env and fill in the values.

# ----------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ----------------------------------------------------------------------
# Environment (e.g., 'local', 'development', 'production')
APP_ENV=local
# Enable/disable debugging. Set to 'false' in production.
APP_DEBUG=true
# The base URL of the application. Used for generating absolute URLs.
APP_URL=http://localhost:8000
# Application timezone
APP_TIMEZONE=UTC
# If your application serves a separate frontend, define allowed origins for CORS.
# Use comma-separated values for multiple origins (e.g., "http://localhost:3000,http://another-domain.com")
CORS_ALLOWED_ORIGINS=*

# ----------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------
# Database connection details for MySQL.
DB_HOST=localhost
DB_PORT=3306
DB_NAME=househunting
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ----------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------
# Specify the logging channel (e.g., 'stack', 'single', 'daily', 'syslog', 'errorlog')
LOG_CHANNEL=stack
# The minimum level at which to log messages (e.g., 'debug', 'info', 'notice', 'warning', 'error', 'critical', 'alert', 'emergency')
LOG_LEVEL=debug

# ----------------------------------------------------------------------
# SESSION & CACHE
# ----------------------------------------------------------------------
# Session driver (e.g., 'file', 'database', 'redis')
SESSION_DRIVER=file
# Cache driver (e.g., 'file', 'database', 'redis')
CACHE_DRIVER=file

# ----------------------------------------------------------------------
# EMAIL (PHPMailer)
# ----------------------------------------------------------------------
# Configuration for sending emails using PHPMailer.
# You can use services like Mailtrap for development.
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls # Can be 'ssl', 'tls', or null
MAIL_FROM_ADDRESS="no-reply@househunting.com"
MAIL_FROM_NAME="House Hunting"
MAIL_ADMIN_ADDRESS="admin@househunting.com"

# ----------------------------------------------------------------------
# TWILIO (for SMS)
# ----------------------------------------------------------------------
# Twilio credentials for sending SMS notifications.
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM_NUMBER=

# ----------------------------------------------------------------------
# GOOGLE APIs
# ----------------------------------------------------------------------
# Google API credentials for services like Google Login or Google Maps.
GOOGLE_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ----------------------------------------------------------------------
# OPENAI API
# ----------------------------------------------------------------------
# OpenAI API key for AI-powered features.
OPENAI_API_KEY=

# ----------------------------------------------------------------------
# FILESYSTEM
# ----------------------------------------------------------------------
# Filesystem configuration. 'local' is the only driver for now.
FILESYSTEM_DRIVER=local
FILESYSTEM_ROOT=/opt/lampp/htdocs/househunting/website-project/public/images

# ----------------------------------------------------------------------
# JWT (JSON Web Tokens)
# ----------------------------------------------------------------------
# Secret key for signing JSON Web Tokens.
# You can generate a strong secret key, e.g., using 'openssl rand -base64 32'
JWT_SECRET=your-super-secret-and-long-key
# Expiration time for JWT tokens in minutes
JWT_EXPIRATION_TIME=60

# ----------------------------------------------------------------------
# PASSWORD RESET
# ----------------------------------------------------------------------
# Expiration time for password reset tokens in minutes
PASSWORD_RESET_EXPIRATION=60

# ----------------------------------------------------------------------
# PAYMENT GATEWAYS
# ----------------------------------------------------------------------

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox # 'sandbox' or 'live'
PAYPAL_RETURN_URL=http://localhost:8000/payment.html?success=true
PAYPAL_CANCEL_URL=http://localhost:8000/payment.html?success=false

# Stripe
STRIPE_SECRET_KEY=

# M-Pesa
MPESA_ENV=sandbox # 'sandbox' or 'live'
MPESA_SANDBOX_URL=https://sandbox.safaricom.co.ke
MPESA_LIVE_URL=https://api.safaricom.co.ke
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=
MPESA_INITIATOR_NAME=
MPESA_INITIATOR_PASSWORD=
MPESA_CERTIFICATE_PATH=
MPESA_STATUS_RESULT_URL=
MPESA_STATUS_TIMEOUT_URL=
